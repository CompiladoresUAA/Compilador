<?xml version="1.0"?>
<SyntaxDefinition name="Custom Highlighting" xmlns="http://icsharpcode.net/sharpdevelop/syntaxdefinition/2008">
	<Color name="Comment" foreground="#FF9999" />
	<Color name="String" foreground="#FF781F" />

	<!-- This is the main ruleset. -->
	<RuleSet>

		<Rule foreground="#C29B61" fontWeight="bold">
			( \* | - | \+ | / | := | % )
		</Rule>

		<Rule foreground="#C29B61" fontWeight="bold">
			(  >= | > | = )
		</Rule>

		<Rule foreground="#06C258" fontWeight="bold">
			(  ; | , | \( | \) | { | } )
		</Rule>
		
		<Span color="Comment" begin="//" />
		<Span color="Comment" multiline="true" begin="/\*" end="\*/" />

		<Span color="String">
			<Begin>"</Begin>
			<End>"</End>
			<RuleSet>
				<!-- nested span for escape sequences -->
				<Span begin="\\" end="." />
			</RuleSet>
		</Span>
		
		<Rule  foreground="yellow" fontWeight="bold">
			/.
		</Rule>
		
		<Keywords fontWeight="bold" foreground="aqua">
			<Word>main</Word>
			<Word>if</Word>
			<Word>then</Word>
			<Word>else</Word>
			<Word>end</Word>
			<Word>do</Word>
			<Word>while</Word>
			<Word>repeat</Word>
			<Word>until</Word>
			<Word>cin</Word>
			<Word>cout</Word>
			<Word>real</Word>
			<Word>int</Word>
			<Word>boolean</Word>




			<!-- ... -->
		</Keywords>

		<Keywords fontWeight="bold" fontStyle="italic" foreground="Red">
			<Word>AvalonEdit</Word>
		</Keywords>

		<!-- Digits -->
		<Rule foreground="yellow" fontWeight="bold">
			-?\d+(\.[0-9]+)   #number floating point
		</Rule>
		<Rule foreground="Red" fontWeight="bold">
			-?\d+   #number
		</Rule>
		
	</RuleSet>
</SyntaxDefinition>