<Window x:Class="IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE" xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="Jucs=" Height="450" Width="800"  Icon="/icon-512x512.png">
    <!--.FocusedElement="{Binding ElementName=mnulexico}"
    -->
    <Grid>
        
        
        
        <Grid.Resources>

            <Style TargetType="{x:Type Thumb}"  x:Key="ScrollBarThumb">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Border CornerRadius="2"
                            Background="Black"
                            BorderBrush="Red"
                            BorderThickness="1" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ScrollBar" >
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition MaxHeight="18" />
                                    <RowDefinition Height="0.00001*" />
                                    <RowDefinition MaxHeight="18" />
                                </Grid.RowDefinitions>
                                <Border Grid.RowSpan="3" />
                                <RepeatButton Grid.Row="0"
                                      Command="ScrollBar.LineUpCommand"
                                      Content="" />
                                <Track x:Name="PART_Track" Grid.Row="1" IsDirectionReversed="true">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumb}" Margin="1,0,1,0"/>
                                    </Track.Thumb>
                                </Track>
                                <RepeatButton Grid.Row="3"
                                      Command="ScrollBar.LineDownCommand"
                                      Content="" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                
            </Style>


            <Style x:Key="options" TargetType="MenuItem" >
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="Background" Value="LightPink"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Margin" Value="-2"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>


            <Style x:Key="avalonstyles" TargetType="avalonedit:TextEditor">
                <Setter Property="Background" Value="#2E2E2E"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>



        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="15*"/>

        </Grid.RowDefinitions>
        <StackPanel Height="Auto" Background="LightBlue" Grid.Row="0">
            <Menu VerticalAlignment="Top">
                <Menu.Height>20</Menu.Height>
                <MenuItem Header="_Archivo">
                    <MenuItem Header="_Abrir" Click="openFile"  >
                        <MenuItem.Icon>
                            <Image Source="/open-folder.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Guardar" Click="saveCode">
                        <MenuItem.Icon>
                            <Image Source="/save.png" Width="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Guardar como" Click="saveAs">
                        <MenuItem.Icon>
                            <Image Source="/saveas.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Cerrar" Click="closeFile" >
                        <MenuItem.Icon>
                            <Image Source="/close.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>
                <MenuItem Header="Editar">
                    <MenuItem Header="Tamaño de fuente">
                        <MenuItem Header="Pequeña"/>
                        <MenuItem Header="Mediana"/>
                        <MenuItem Header="Grande"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Formato">

                    <MenuItem Header="_Claro" Click="lightTheme" >
                        <MenuItem.Icon>
                            <Image Source="/light-mode.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Obscuro" Click="darkTheme"  >
                        <MenuItem.Icon>
                            <Image Source="/night-mode.png" Width="20" Height="20"/>
                        </MenuItem.Icon>
                    </MenuItem>



                </MenuItem>
                <MenuItem Header="Compilar"/>
                <MenuItem Header="Ayuda"/>



            </Menu>


        </StackPanel>
        <Grid Background="LightGray" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="171*"/>
                <ColumnDefinition Width="69*"/>
                <ColumnDefinition Width="160*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>

            </Grid.RowDefinitions>

